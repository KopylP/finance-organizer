                android:layout_marginRight="5dp"
                android:text="0.0"
                android:layout_gravity="right"
                android:textColor="@android:color/black"
                android:id="@+id/viewCostPerDay"
                android:textSize="20sp" />
        </FrameLayout>
        <Button
            android:layout_width="wrap_content"
